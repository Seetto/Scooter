// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String    @id @default(cuid())
  email              String    @unique
  name               String?
  password           String    // Hashed password
  phoneNumber        String?   // Rider phone number
  hotelAddress       String?   // Hotel / villa address
  rentalDuration     String?   // e.g. "3 days", "1 week"
  idDocumentImageUrl String?   // Passport or driver's licence image (future use)
  damageAgreement    String?   // Damage agreement text / reference (future use)
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  bookings           Booking[]
}

model Store {
  id                String    @id @default(cuid())
  name              String
  email             String    @unique
  password          String    // Hashed password
  phoneNumber       String?
  address           String?
  latitude          Float?
  longitude         Float?
  storeFrontImageUrl String?  // Store front photo (future use)
  accepted          Boolean   @default(false) // Admin approval required
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  scooters          Scooter[]
  bookings          Booking[]
}

enum ScooterStatus {
  AVAILABLE
  RENTED
  MAINTENANCE
  RESERVED
}

model Scooter {
  id                String         @id @default(cuid())
  store             Store           @relation(fields: [storeId], references: [id], onDelete: Cascade)
  storeId           String
  name              String
  model             String?
  numberPlate       String?
  vinOrChassisNumber String?
  availableUnits    Int            @default(1)
  odometer          Int?
  condition         String?
  status            ScooterStatus  @default(AVAILABLE)
  notes             String?
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt

  bookings          Booking[]
}

enum BookingStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
}

model Booking {
  id        String         @id @default(cuid())
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  store     Store          @relation(fields: [storeId], references: [id], onDelete: Cascade)
  storeId   String
  scooter   Scooter?       @relation(fields: [scooterId], references: [id], onDelete: Cascade)
  scooterId String?
  startDate DateTime
  endDate   DateTime
  status    BookingStatus  @default(PENDING)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
}
